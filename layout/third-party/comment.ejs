<%if (page.comment) {%><script src="//cdn1.lncld.net/static/js/3.11.1/av-min.js"></script>
<script src="//unpkg.com/valine/dist/Valine.min.js"></script>
<script>
  var GUEST = ['nick', 'mail', 'link'];
  var guest = '<%-theme.comment.guest_info%>';
  guest = guest.split(',').filter(function(item) {
    return GUEST.indexOf(item) > -1;
  });
  new Valine({
    el: '#comments',
    verify: <%-theme.comment.verify%>,
    notify: <%-theme.comment.notify%>,
    appId: '<%-theme.comment.appid%>',
    appKey: '<%-theme.comment.appkey%>',
    placeholder: '<%-theme.comment.placeholder%>',
    avatar: '<%-theme.comment.avatar%>',
    meta: guest,
    pageSize: '<%-theme.comment.pageSize%>' || 10,
    lang: '<%-theme.comment.language%>' || 'zh-cn'
  });
</script><%}%>